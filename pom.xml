    <groupId>org.spafka</groupId>
    <artifactId>scala</artifactId>
    <packaging>pom</packaging>
    <version>1.0-releases</version>

    <modules>
        <module>spark-rpc</module>
        <module>scala-in-depth</module>
        <module>scalable-io</module>
